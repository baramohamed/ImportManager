<Page x:Class="ImportManager.View.AuthentificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImportManager.View"
      xmlns:MaterialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="AuthentificationPage">

    <DockPanel>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">
            <TextBox MaterialDesign:HintAssist.Hint="Nom d'Utilisateur"
                     Margin="5"/>
            <TextBox MaterialDesign:HintAssist.Hint="Mot de Passe"
                     Margin="5"/>
            <Button HorizontalAlignment="Right" 
                    Content="Se Connecter"
                    Margin="5"/>
        </StackPanel>
        
    </DockPanel>
</Page>
